<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.gluonhq.jfxapps</groupId>
        <artifactId>jfxapps.boot</artifactId>
        <version>17.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>jfxapps.boot.layer</artifactId>

    <dependencies>
        
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>spring.core.patch.link</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>org.hibernate.orm.core.patch.link</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.boot.starter</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.boot.starter.test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <properties>
        <skip.integration.test>false</skip.integration.test>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <skipITs>${skip.integration.test}</skipITs>
                            <!-- maven does not include the current module, test below will fail. Ok in IDE -->
                            <excludes>
                                <exclude>com.gluonhq.jfxapps.boot.layer.internal.LayerLifecycleIT</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-invoker-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <projectsDirectory>${basedir}/src/test/resources-its</projectsDirectory>
                    <pomIncludes>
                        <pomInclude>common/pom.xml</pomInclude>
                    </pomIncludes>
                    
                    <streamLogs>true</streamLogs>
                    <goals>
                        <goal>clean</goal>
                        <goal>install</goal>
                    </goals>
                </configuration>
                <executions>
                    <execution>
                        <id>forked-install</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>install</goal>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <skipInvocation>${skip.integration.test}</skipInvocation>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>