<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.gluonhq.jfxapps</groupId>
    <artifactId>jfxapps.app.manager</artifactId>
    <version>${manager.version}</version>
  </parent>
  <artifactId>jfxapps.app.manager.metadata.model</artifactId>

    <properties>
        <javafx.version>16</javafx.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.boot.starter</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.core.metadata</artifactId>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.jfxapps</groupId>
                <artifactId>jfxapps-metadata-maven-plugin</artifactId>
                <version>${jfxapps.version}</version>
                <executions>
                    <execution>
                        <id>generate-class-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>metadataSource</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--<jarFilterPatterns>
                        <jarFilterPatterns>.*[/\\](javafx-(.*?))[/\\].*</jarFilterPatterns>
                    </jarFilterPatterns>-->
                    <includePackages>
                        <includePackage>com.gluonhq.jfxapps.app.manager.model</includePackage>
                    </includePackages>
                    <targetPackage>com.oracle.javafx.scenebuilder.metadata.javafx</targetPackage>
                    <executorClass>com.gluonhq.jfxapps.metadata.template.scenebuilderx.ScenebuilderxExecutor</executorClass>
                    <extensionName>JavafxMetadataExtension</extensionName>
                    <moduleName>scenebuilder.metadata.javafx</moduleName>
                    <uuid>5cadadb4-8aba-44f1-b66d-78e988cd998c</uuid>
                    <failOnError>false</failOnError>
                    <javafxVersion>${javafx.version}</javafxVersion>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.gluonhq.jfxapps</groupId>
                        <artifactId>jfxapps.app.manager.metadata.modeldata</artifactId>
                        <version>${manager.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.gluonhq.jfxapps</groupId>
                        <artifactId>jfxapps.core.metadata</artifactId>
                        <version>${jfxapps.version}</version>
                    </dependency>
                    
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-fxml</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-web</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-swing</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>