<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.gluonhq.jfxapps</groupId>
    <artifactId>jfxapps.app.scenebuilder</artifactId>
    <version>${scenebuilder.version}</version>
  </parent>
  <artifactId>scenebuilder.registry</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.jfxapps</groupId>
                <artifactId>jfxapps-registry-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-registry-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>jfxappsRegistry</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <format>json</format>
                    <registry>
                        <applications>
                            <application>
                                <uuid>06ae1f67-a8aa-49e3-abb5-4f108534578c</uuid>
                                <dependency>
                                    <groupId>com.gluonhq.jfxapps</groupId>
                                    <artifactId>scenebuilder.api</artifactId>
                                    <version>${scenebuilder.version}</version>
                                </dependency>
                                <description>
                                    <icon>fxmlRunner64x64.png</icon>
                                    <title>FXML Runner</title>
                                    <text>App that run fxml files</text>
                                </description>
                                <extensions>
                                    <extension>
                                        <uuid>86de1209-5c5e-41a5-941b-1484fadccdd6</uuid>
                                        <dependency>
                                            <groupId>com.gluonhq.jfxapps</groupId>
                                            <artifactId>scenebuilder.ui</artifactId>
                                            <version>${scenebuilder.version}</version>
                                        </dependency>
                                    </extension>
                                    <extension>
                                        <uuid>26cd6a45-7750-4b3e-bbd2-018187df0c49</uuid>
                                        <dependency>
                                            <groupId>com.gluonhq.jfxapps</groupId>
                                            <artifactId>scenebuilder.app</artifactId>
                                            <version>${scenebuilder.version}</version>
                                        </dependency>
                                    </extension>
                                    <extension>
                                        <uuid>3d5e0c86-fda2-4a8a-b7b2-85394f2eb9de</uuid>
                                        <dependency>
                                            <groupId>com.gluonhq.jfxapps</groupId>
                                            <artifactId>scenebuilder.main</artifactId>
                                            <version>${scenebuilder.version}</version>
                                        </dependency>
                                    </extension>

                                    <!--temp-->
                                    <extension>
                                        <uuid>f38264b5-aaea-444d-8ca8-f6d8ab910b2b</uuid>
                                        <dependency>
                                            <groupId>com.gluonhq.jfxapps</groupId>
                                            <artifactId>scenebuilder.ext.exporter</artifactId>
                                            <version>${scenebuilder.version}</version>
                                        </dependency>
                                    </extension>
                                </extensions>
                            </application>
                        </applications>
                    </registry>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>