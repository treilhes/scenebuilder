<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.gluonhq.jfxapps</groupId>
        <artifactId>jfxapps.app</artifactId>
        <version>${jfxapps.version}</version>
    </parent>
    <artifactId>jfxapps.app.registry.mandatory</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.jfxapps</groupId>
                <artifactId>jfxapps-registry-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-registry-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>jfxappsRegistry</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <format>json</format>
                    <registry>
                        <applications>
                            <application>
                                <uuid>00000000-0000-0000-0000-000000000001</uuid>
                                <dependency>
                                    <groupId>com.gluonhq.jfxapps</groupId>
                                    <artifactId>manager.api</artifactId>
                                    <version>1.0.0-SNAPSHOT</version>
                                </dependency>
                                <description>
                                    <icon>fxmlRunner64x64.png</icon>
                                    <title>FXML Runner</title>
                                    <text>App that run fxml files</text>
                                </description>
                            </application>
                        </applications>
                    </registry>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>