<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>JfxAppsRegistryMojoIT</groupId>
    <artifactId>JfxAppsRegistryMojoIT</artifactId>
    <version>@project.version@</version>

    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.jfxapps</groupId>
                <artifactId>jfxapps-registry-maven-plugin</artifactId>
                <version>@project.version@</version>
                <executions>
                    <execution>
                        <id>generate-registry-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>jfxappsRegistry</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <format>json</format>
                    <registry>
                        <applications>
                            <application>
                                <uuid>feda298c-4a63-450d-8c59-8cb43241ba3d</uuid>
                                <dependency>
                                    <groupId>grpId</groupId>
                                    <version>0.0.0</version>
                                    <artifactId>artId</artifactId>
                                </dependency>
                                <description>
                                    <icon>icon.png</icon>
                                    <title>title</title>
                                    <text>txt</text>
                                </description>
                            </application>
                        </applications>
                    </registry>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>