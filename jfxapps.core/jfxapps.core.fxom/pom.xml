<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jfxapps.core</artifactId>
        <groupId>com.gluonhq.jfxapps</groupId>
        <version>${jfxapps.version}</version>
    </parent>

    <artifactId>jfxapps.core.fxom</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.core.utils</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>javafx.fxml.patch.link</artifactId>
        </dependency>

        <dependency>
            <groupId>org.graalvm.js</groupId>
            <artifactId>js</artifactId>
            <version>21.3.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.graalvm.js</groupId>
            <artifactId>js-scriptengine</artifactId>
            <version>21.3.0</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.javafx.starter</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.boot.starter</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.gluonhq.jfxapps</groupId>
            <artifactId>jfxapps.boot.starter.test</artifactId>
            <scope>test</scope>
        </dependency>


    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.jfxapps</groupId>
                <artifactId>jfxapps-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>resolve-jar-path</id>
                        <goals>
                            <goal>properties</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.gluonhq.jfxapps</groupId>
                        <artifactId>javafx.fxml.patch</artifactId>
                        <version>${jfxapps.version}</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <!--<useIncrementalCompilation>false</useIncrementalCompilation>-->
                    <compilerArgs>
                        <!-- Enable instrumentation -->
                        <arg>--patch-module</arg>
                        <arg>javafx.fxml=${com.gluonhq.jfxapps:javafx.fxml.patch:jar}</arg>
                        <!-- Enable access to
                        com.sun.javafx.fxml.FXMLLoaderHelper for staticLoad in
                        FXOMLOader-->
                        <arg>--add-exports</arg>
                        <arg>javafx.fxml/com.sun.javafx.fxml=jfxapps.core.fxom</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
