<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.gluonhq.scenebuilder</groupId>
        <artifactId>parent</artifactId>
        <version>17.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>scenebuilder.metadata.gluon5legacy</artifactId>

    <properties>
        <javafx.version>11</javafx.version>
        <gluon.version>5.0.0-jdk9</gluon.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.gluonhq.scenebuilder</groupId>
            <artifactId>kit</artifactId>
            <version>16.0.0-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>org.openjfx</groupId>
                    <artifactId>javafx-fxml</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.openjfx</groupId>
                    <artifactId>javafx-web</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.openjfx</groupId>
                    <artifactId>javafx-swing</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.gluonhq</groupId>
            <artifactId>charm-glisten</artifactId>
            <version>${gluon.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-web</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-swing</artifactId>
            <version>${javafx.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.gluonhq.scenebuilder</groupId>
                <artifactId>scenebuilder.metadata-maven-plugin</artifactId>
                <version>17.0.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>generate-class-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>metadataSource</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jarFilterPatterns>
                        <jarFilterPatterns>.*[/\\](charm-(.*?))[/\\].*</jarFilterPatterns>
                    </jarFilterPatterns>
                    <rootClasses>
                        <rootClass>javafx.scene.Node</rootClass>
                    </rootClasses>
                    <includePackages>
                        <includePackage>com.gluonhq.charm.glisten.control</includePackage>
                    </includePackages>
                    <targetPackage>com.oracle.javafx.scenebuilder.kit.metadata</targetPackage>
                    <executorClass>com.oracle.javafx.scenebuilder.metadata.template.legacy.LegacyExecutor</executorClass>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.gluonhq.scenebuilder</groupId>
                        <artifactId>kit</artifactId>
                        <version>16.0.0-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>com.gluonhq.scenebuilder</groupId>
                        <artifactId>scenebuilder.metadata.javafx</artifactId>
                        <version>17.0.0-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>com.gluonhq.scenebuilder</groupId>
                        <artifactId>scenebuilder.metadata.gluon</artifactId>
                        <version>17.0.0-SNAPSHOT</version>
                    </dependency>
                    <!-- https://mvnrepository.com/artifact/com.gluonhq/charm-glisten -->
                    <dependency>
                        <groupId>com.gluonhq</groupId>
                        <artifactId>charm-glisten</artifactId>
                        <version>${gluon.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-fxml</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-web</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-swing</artifactId>
                        <version>${javafx.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>