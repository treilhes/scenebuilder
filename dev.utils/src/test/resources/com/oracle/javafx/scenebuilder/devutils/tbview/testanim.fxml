<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.animation.Timeline?>
<?import javafx.animation.KeyFrame?>
<?import javafx.animation.KeyValue?>
<?import javafx.util.Duration?>
<?import java.lang.Double?>
<?import javafx.scene.effect.GaussianBlur?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="512.0" prefWidth="868.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <fx:script>
        function testClick(event) {
            java.lang.System.out.println('You clicked me!');
            timeline.play();
        }
    </fx:script>
    <children>
        <Circle fx:id="circleId" cache="true" cacheHint="SPEED" fill="#1d84e4" layoutX="210.0" layoutY="213.0" radius="100.0" stroke="BLACK" strokeType="INSIDE">
        <effect>
            <GaussianBlur radius="19.5" />
         </effect></Circle>
      <Button layoutX="20.0" layoutY="22.0" mnemonicParsing="false" onAction="testClick(event);" text="Button" />
    </children>
    <fx:define>
        <Timeline fx:id="indef" fx:constant="INDEFINITE"/>
        <Double fx:id="somevalue" fx:value="1000"/>
        <Timeline fx:id="timeline" autoReverse="true" cycleCount="$indef">
            <keyFrames>
                <KeyFrame time="1000ms">
                    <values>
                        <KeyValue target="$circleId.layoutXProperty" endValue="$somevalue"/>
                    </values>
                </KeyFrame>
            </keyFrames>
        </Timeline>
    </fx:define>
</Pane>